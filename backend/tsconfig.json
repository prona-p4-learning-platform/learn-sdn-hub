{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* Transpiler options */
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true
  },
  "include": ["src", "test"]
}
